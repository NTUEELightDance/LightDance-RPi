USERNAME="pi"
WORKSPACE="/home/pi/LightDance-RPi"

# copy authorized_keys
mkdir -p /home/$USERNAME/.ssh
cp $WORKSPACE/authorized_keys /home/$USERNAME/.ssh/

# build and set daemon
cd $WORKSPACE/scripts
./build-controller
./set-service

